<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/example_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.navigationapp.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/navigation_home_to_navigation_search"
            app:destination="@id/navigation" />

    </fragment>

    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/navigation_search">
        <fragment
            android:id="@+id/navigation_search"
            android:name="com.example.navigationapp.SettingsFragment"
            tools:layout="@layout/fragment_settings">

            <action
                android:id="@+id/navigation_search_to_navigation_profile"
                app:destination="@+id/navigation_profile" />
        </fragment>
        <fragment
            android:id="@+id/navigation_profile"
            android:name="com.example.navigationapp.ProfileFragment"
            tools:layout="@layout/fragment_profile" />
    </navigation>

    <action
        android:id="@+id/action_global_navigation"
        app:destination="@id/navigation" />
</navigation>